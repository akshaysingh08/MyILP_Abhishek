<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbarfit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cross"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/cross1" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginLeft="13dp"
            android:background="@drawable/circle_activity1"
            android:src="@drawable/ic_activity2" />

        <ImageView
            android:id="@+id/dist"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginLeft="13dp"
            android:background="@drawable/distactivity"
            android:src="@drawable/distance" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginLeft="13dp"
            android:background="@drawable/circle_activity2"
            android:src="@drawable/calorie" />

        <ImageView
            android:id="@+id/img4"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginLeft="13dp"
            android:background="@drawable/circular_activity"
            android:src="@drawable/heartbeat" />
    </LinearLayout>
</android.support.v7.widget.Toolbar>
